<link rel="stylesheet" href="../public/users.css" />

<div class="form-box">
  <form id="login" method="POST" action="/login/userLogin">
    <h2>Login Page</h2>
    <div>
      <input
        type="email"
        name="emailaddress"
        id="emailaddress"
        placeholder="Email"
      />
    </div>
    <div>
      <input
        type="password"
        name="passwordInput"
        id="passwordInput"
        placeholder="Password"
      />
    </div>
    <div>
      <button type="submit">Log In</button>
    </div>
  </form>
  <a href="/login/userSignup">New user? Click here to register!</a>
</div>